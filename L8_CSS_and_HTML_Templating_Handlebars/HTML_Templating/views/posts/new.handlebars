<article class="new-post">
  <h1>Make a Post</h1>
  <form action="/posts" method="POST" class="new-post-form">
    <label>
      Post Title
      {{!-- when user clicks Create New Post and gets an error, we will pass in and render 
      whatever data that's properly filled out in each value= for each field (repopulate it)
       --}}
      <input type="text" name="title" placeholder="Post Title" value="{{post.title}}" class="full-width-input">
    </label>

    <label for="post-body">
      Post Body
    </label>
    <textarea id="post-body" name="body" rows="4" placeholder="Post Content"
      class="full-width-input">{{post.body}}</textarea>

    <label for="posterId">
      Poster
    </label>
    {{!-- Select User... dropdown --}}
    <select class="full-width-input" name="posterId" id="posterId">
      <option value="">Select User...</option>
      {{#each users}}
      <option value="{{_id}}">{{firstName}} {{lastName}}</option>
      {{/each}}
    </select>
    <label>
      Tags (separated by comma)<br><input type="text" name="tags">
    </label>
    <br>
    <button type="submit">Create New Post</button>
    <button type="reset">Clear Form</button>
    {{!-- <input type="hidden" name='_method' value="PUT" /> --}}
  </form>
  {{!-- render any error if the user fills out the form incorrectly in any way 
  (check route('/').post in routes.posts.js)
   --}}
  {{#if hasErrors}}
  <ul class="error-list">
    {{#each errors}}
    <li>
      {{this}}
    </li>
    {{/each}}
  </ul>
  {{/if}}

</article>